<div id="masonry-container" class="transitions-enabled infinite-scroll clearfix">
<div class="border-form-div">
<h4> Step 1: Name your list and select a category </h4>
  <%= form_for(@list) do |f| %>
<br>
    <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>
  <br>
    
   <div class="field">
   <%= f.label :Select_a_Category  %>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Category Options") %>
    </div>
    <br>

   <div class="actions">
    <%= f.submit "Next"%>
    </div>
    <% end %>
    <br>

  <div class="panel-footer">
  <%= link_to "Return to Profile", url_for({ :controller => 'users', :action => 'show', :id => current_user.id }) %>
  </div>
</div>
</div>